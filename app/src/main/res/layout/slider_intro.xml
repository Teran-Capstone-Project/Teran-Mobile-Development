<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageSlider"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/illustration_journal"/>
    <TextView
        android:id="@+id/titleSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Journal"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/descSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"
        android:text="Aplikasi ini menawarkan ruang pribadi untuk mencatat setiap pengalaman, refleksi, dan tujuan harianmu."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

</LinearLayout>